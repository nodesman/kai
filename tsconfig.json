{
  "compilerOptions": {
    "target": "es2020",          // Or a more recent version if your Node supports it
    "module": "node16",        // For Node.js, enabling ESM-friendly output
    "moduleResolution": "node16", // Recommended with module: node16
    "outDir": "bin",           // Output to the bin directory
    "rootDir": "src",          // Your source files are in src
    "strict": true,             // Enable strict type checking
    "esModuleInterop": true,     // For better compatibility with CommonJS modules
    "skipLibCheck": true,       // Optional: Speeds up compilation
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true //if importing data from a json file.
  },
  "include": [
    "src/**/*.ts"
  ],       // Compile everything in src
  "exclude": ["node_modules", "bin"]
}